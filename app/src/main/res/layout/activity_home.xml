<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"/>

    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/bg"
        android:src="@drawable/cloud1"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/stars"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tvMountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="40sp"
                android:fontFamily="@font/baloo"
                android:textColor="@color/colorWhite"/>





            <Button
                android:id="@+id/btLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMountain"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:background="@drawable/bt_ui"
                android:text="Logout"/>

            <Button
                android:id="@+id/btshowpost"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btLogout"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:background="@drawable/bt_ui"
                android:text="View pdf "/>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>